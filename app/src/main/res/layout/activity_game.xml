<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/game_box"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:columnCount="4"
        android:rowCount="5"
        android:background="#C1C111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/small_box1"
            style = "@style/BoxStyle"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/base"
            android:onClick="showXY"
            />

        <Button
            android:id="@+id/small_box2"
            style = "@style/BoxStyle"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/base"
            />

        <Button
            android:id="@+id/small_box3"
            style = "@style/BoxStyle"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/base"
            />

        <Button
            android:id="@+id/small_box4"
            style = "@style/BoxStyle"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/base"
            />

        <Button
            android:id="@+id/cue_box"
            style="@style/BoxStyle"
            android:layout_width="@dimen/double_base"
            android:layout_height="@dimen/double_base"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="2"
            android:layout_columnSpan="2" />

        <Button
            android:id="@+id/h_box"
            style = "@style/BoxStyle"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_width="@dimen/double_base"
            android:layout_height="@dimen/base"
            />

        <Button
            android:id="@+id/v_box1"
            style = "@style/BoxStyle"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/double_base"
            />

        <Button
            android:id="@+id/v_box2"
            style = "@style/BoxStyle"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/double_base"
            />

        <Button
            android:id="@+id/v_box3"
            style = "@style/BoxStyle"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/double_base"
            />

        <Button
            android:id="@+id/v_box4"
            style = "@style/BoxStyle"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/base"
            android:layout_height="@dimen/double_base"
            />

    </GridLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/game_back_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/reset_button"
        app:layout_constraintEnd_toStartOf="@+id/reset_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/game_reset_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toBottomOf="@+id/game_box" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/game_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>